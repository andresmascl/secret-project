# --- Google Cloud Platform (GCP) ---
GCP_PROJECT_ID=some-demo-name
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/some/route/some-file.json

# --- Gemini Model & Live API ---
VERTEX_MODEL_NAME=gemini-2.0-flash-live
LIVE_API_VOICE=Aoede
# SDK Auto-config flags
GOOGLE_GENAI_USE_VERTEXAI=true

# --- Audio Settings (Linux/PulseAudio) ---
# Device index for input microphone; leave blank to use system default
AUDIO_DEVICE_INDEX=0
# Matches the host UID (usually 1000)
USER_ID=1000
GROUP_ID=1000

# --- Operational Controls ---
LOG_LEVEL=INFO
ENABLE_VOLUME_BAR=1

# --- App Behavior ---
PYTHONUNBUFFERED=1